{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "MongoDbSettings": {
    "ConnectionString": "mongodb://admin:EMISPassword123!@localhost:27017",
    "DatabaseName": "emis_chat",
    "ConversationsCollection": "conversations",
    "MessagesCollection": "messages"
  },
  
  "RedisSettings": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "emis_chat:",
    "DefaultCacheDurationMinutes": 60
  },
  
  "MinIOSettings": {
    "Endpoint": "localhost:9000",
    "AccessKey": "admin",
    "SecretKey": "EMISPassword123!",
    "BucketName": "emis-chat",
    "UseSSL": false,
    "FileRetentionDays": 365
  },
  
  "JwtSettings": {
    "Secret": "YourSuperSecretKeyForJWTThatIsAtLeast32CharactersLong",
    "Issuer": "EMIS.ChatService",
    "Audience": "EMIS.Client",
    "ExpirationMinutes": 60
  },
  
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/chat-service-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  
  "CorsSettings": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:4200"],
    "AllowCredentials": true
  }
}
